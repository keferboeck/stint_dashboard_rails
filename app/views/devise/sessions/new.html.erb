<div class="min-h-screen bg-gray-50 flex items-center justify-center p-6">
  <div class="w-full max-w-sm bg-white shadow-md rounded-2xl p-6">
    <div class="text-center mb-4">
      <h1 class="text-xl font-semibold">Stint Dashboard</h1>
      <p class="text-sm text-gray-500">Sign in to your account</p>
    </div>

    <%= form_with(scope: resource_name, url: session_path(resource_name), class: "space-y-4", data: { turbo: false }) do |f| %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <%= f.email_field :email, autofocus: true, class: "w-full border rounded-lg px-3 py-2", autocomplete: "email" %>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <%= f.password_field :password, class: "w-full border rounded-lg px-3 py-2", autocomplete: "current-password" %>
      </div>
      <div class="flex items-center justify-between">
        <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-indigo-600 hover:underline" %>
      </div>
      <%= f.submit "Sign in", class: "w-full bg-indigo-600 text-white rounded-lg py-2 hover:bg-indigo-700" %>
    <% end %>
  </div>
</div>
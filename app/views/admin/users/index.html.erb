<!-- app/views/admin/users/index.html.erb -->
<div class="max-w-5xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-h3">Users</h1>
    <%= link_to "New user", new_admin_user_path, class: "px-3 py-2 rounded bg-brand-green text-black font-medium" %>
  </div>

  <div class="divide-y divide-white/10 rounded-lg border border-white/10">
    <% @users.each do |u| %>
      <div class="p-4 flex items-center justify-between">
        <div>
          <div class="font-medium"><%= u.first_name %> <%= u.last_name %></div>
          <div class="text-white/60 text-sm"><%= u.email %></div>
        </div>
        <div class="flex items-center gap-3">
          <span class="px-2 py-0.5 text-xs rounded bg-white/10 uppercase"><%= u.role %></span>
          <%= link_to "Edit", edit_admin_user_path(u), class: "text-brand-purple hover:underline" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
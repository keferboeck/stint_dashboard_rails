<div class="p-5 flex items-center gap-3 border-b border-white/10">
  <%= image_tag "stint-logo-white.svg", class: "h-7 w-auto", alt: "Stint" %>
  <span class="font-medium tracking-wide text-white/90">Dashboard</span>
</div>

<nav class="flex-1 p-4 space-y-1">
  <%= nav_link_to "Dashboard", dashboard_path, icon: "window.svg" %>

  <%= nav_link_to "Campaigns", admin_campaigns_path, icon: "globe.svg" %>

  <% if current_user.admin? %>
    <div class="mt-4 pt-4 border-t border-white/10 text-xs uppercase tracking-wider text-white/40">Admin</div>
    <%= nav_link_to "Users", admin_users_path, icon: "next.svg" %>
  <% end %>
</nav>

<div class="p-4 border-t border-white/10">
  <%= button_to "Log out",
                destroy_user_session_path,
                method: :delete,
                class: "w-full text-left px-3 py-2 rounded-lg bg-white/5 hover:bg-white/10 transition" %>
</div>
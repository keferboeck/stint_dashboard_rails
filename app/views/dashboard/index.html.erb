<div class="dashboard-container">
  <h1>Welcome, <%= current_user.first_name %> <%= current_user.last_name %></h1>

  <p class="text-muted">
    You are signed in as <strong><%= current_user.role.capitalize %></strong>.
  </p>

  <hr>

  <div class="dashboard-links">
    <h2>Quick Access</h2>
    <ul>
      <li><%= link_to "Campaigns", admin_campaigns_path %></li>
      <% if admin? %>
        <li><%= link_to "Manage Users", new_admin_user_path %></li>
      <% end %>
      <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, data: { confirm: "Are you sure you want to log out?" } %></li>
    </ul>
  </div>
</div>
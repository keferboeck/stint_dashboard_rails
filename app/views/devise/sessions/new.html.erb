<div class="w-full max-w-md relative z-10">
  <div class="mb-6 flex justify-center">
    <%= image_tag "stint-logo-white.svg", class: "h-10 w-auto", alt: "Stint" %>
  </div>

  <div class="rounded-2xl bg-white/5 border border-white/10 p-6 shadow-[0_10px_40px_rgba(0,0,0,.35)]">
    <h1 class="text-2xl font-semibold mb-1">Sign in</h1>
    <p class="text-white/60 mb-6 text-sm">Welcome back. Please enter your details.</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :email, class: "block text-sm mb-1 text-white/80" %>
          <%= f.email_field :email,
                            autofocus: true,
                            autocomplete: "email",
                            class: "w-full px-3 py-2 rounded-lg bg-white/5 border border-white/10 text-white placeholder-white/40 focus:outline-none focus:ring-2 focus:ring-brand-purple" %>
        </div>

        <div>
          <div class="flex items-center justify-between">
            <%= f.label :password, class: "block text-sm mb-1 text-white/80" %>
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-brand-purple hover:underline" %>
          </div>
          <%= f.password_field :password,
                               autocomplete: "current-password",
                               class: "w-full px-3 py-2 rounded-lg bg-white/5 border border-white/10 text-white placeholder-white/40 focus:outline-none focus:ring-2 focus:ring-brand-purple" %>
        </div>

        <%= f.submit "Sign in",
                     class: "w-full mt-2 inline-flex items-center justify-center rounded-lg bg-brand-green text-black font-medium px-4 py-2.5 hover:opacity-90 transition" %>
      </div>
    <% end %>
  </div>
</div>
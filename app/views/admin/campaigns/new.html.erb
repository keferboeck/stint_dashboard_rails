<!-- app/views/admin/campaigns/new.html.erb -->
<div class="max-w-2xl">
  <h1 class="text-2xl font-semibold mb-6">Create a new campaign</h1>

  <p class="mb-4 text-white/70">Step 1: upload your CSV to begin.</p>

  <%= form_with url: upload_csv_admin_campaign_wizard_path, multipart: true, method: :post, class: "space-y-4" do |f| %>
    <div>
      <label class="block mb-1 text-sm text-white/80">CSV file</label>
      <%= file_field_tag :file, accept: ".csv", class: "w-full" %>
    </div>

    <div class="flex gap-2">
      <%= link_to "Cancel",
                  admin_campaigns_path,
                  class: "px-4 py-2 rounded-lg bg-[#121212] text-white border border-white font-medium" %>
      <%= f.submit "Upload & Continue",
                   class: "px-4 py-2 rounded-lg bg-[#A49EF2] text-white font-medium hover:bg-[#928AEF] transition" %>
    </div>
  <% end %>
</div>
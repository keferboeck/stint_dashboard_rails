<!-- app/views/admin/users/_form.html.erb -->
<%= form_with model: @user, url: request.path, class: "space-y-6" do |f| %>
  <div class="grid md:grid-cols-2 gap-4">
    <div>
      <%= f.label :first_name, class: "block text-sm mb-1" %>
      <%= f.text_field :first_name, class: "w-full bg-white/5 border border-white/10 rounded px-3 py-2" %>
    </div>
    <div>
      <%= f.label :last_name, class: "block text-sm mb-1" %>
      <%= f.text_field :last_name, class: "w-full bg-white/5 border border-white/10 rounded px-3 py-2" %>
    </div>
    <div class="md:col-span-2">
      <%= f.label :email, class: "block text-sm mb-1" %>
      <%= f.email_field :email, class: "w-full bg-white/5 border border-white/10 rounded px-3 py-2" %>
    </div>
    <div class="md:col-span-2">
      <%= f.label :role, class: "block text-sm mb-1" %>
      <%= f.select :role, User.roles.keys, {}, class: "w-full bg-white/5 border border-white/10 rounded px-3 py-2" %>
    </div>
  </div>

  <div class="border border-white/10 rounded-lg p-4">
    <div class="text-sm uppercase tracking-wider text-white/50 mb-2">Notifications</div>
    <div class="grid md:grid-cols-2 gap-3">
      <label class="flex items-center gap-2"><%= f.check_box :notify_all_new_schedules %> (A) New campaigns (any)</label>
      <label class="flex items-center gap-2"><%= f.check_box :notify_all_sent_copies %> (B) Copy of any sent</label>
      <label class="flex items-center gap-2"><%= f.check_box :notify_all_campaign_summaries %> (C) Summary after run (any)</label>
      <label class="flex items-center gap-2"><%= f.check_box :notify_own_new_schedules %> (D) New campaigns (own)</label>
      <label class="flex items-center gap-2"><%= f.check_box :notify_own_sent_copies %> (E) Copy of sent (own)</label>
      <label class="flex items-center gap-2"><%= f.check_box :notify_own_campaign_summaries %> (F) Summary after run (own)</label>
    </div>
  </div>

  <div class="flex gap-3">
    <%= f.submit "Save", class: "px-4 py-2 bg-brand-green text-black rounded font-medium" %>
    <%= link_to "Cancel", admin_users_path, class: "px-4 py-2 bg-white/10 rounded" %>
  </div>
<% end %>
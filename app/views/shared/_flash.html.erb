<% flash.each do |type, message| %>
  <% tone =
       case type.to_s
       when "notice" then "bg-brand-green/15 text-brand-white"
       when "alert", "error" then "bg-red-500/15 text-red-200"
       else "bg-white/10 text-white/90"
       end %>
  <div class="mb-3 px-3 py-2 rounded-lg <%= tone %>">
    <%= message %>
  </div>
<% end %>